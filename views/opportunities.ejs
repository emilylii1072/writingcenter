<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="styles.css">
    <title>Resources</title>
    <style>
        body {
            font-family: 'Merriweather', serif;
            background-color: #f4f4f4;
            color: #333;
            background-image: linear-gradient(to right, #f4f4f4, #e8f5e9);
            margin: 0;
            padding: 0;
        }
        .navbar {
            background-color: #8EBA66;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            flex-wrap: wrap;
        }
        .navbar img {
            width: 40px;
            height: 40px;
            margin-right: 15px;
        }
        .navbar a {
            color: white;
            margin: 0 10px;
            text-decoration: none;
            font-size: 16px;
            transition: color 0.3s ease;
        }
        .navbar a:hover {
            color: #e8f5e9;
        }
        .profile-dropdown {
            position: relative;
        }
        .profile-icon {
            font-size: 24px;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: color 0.3s ease;
        }
        .profile-icon:hover {
            color: #e8f5e9;
        }
        .auth-action {
            display: none;
            position: absolute;
            top: 100%;
            right: 0;
            background-color: #8EBA66;
            padding: 10px 20px;
            border-radius: 5px;
            white-space: nowrap;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        .profile-dropdown:hover .auth-action {
            display: block;
        }
        .sidebar {
            width: 200px;
            background-color: #8EBA66;
            padding: 20px;
            position: fixed;
            top: 60px;
            bottom: 0;
            overflow-y: auto;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
        }
        .sidebar a {
            display: block;
            color: white;
            padding: 10px;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }
        .sidebar a:hover, .sidebar a.active {
            background-color: #47763B;
        }
        .container {
            margin-left: 220px;
            padding: 30px;
            margin-top: 80px;
        }
        h1 {
            color: #8EBA66;
            font-size: 28px;
            text-align: center;
            margin-bottom: 20px;
        }
        .controls {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }
        .search-box {
            width: 50%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            font-size: 16px;
        }
        .sort-options {
            display: flex;
            gap: 10px;
        }
        .sort-button {
            padding: 10px 15px;
            background-color: #8EBA66;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        .sort-button:hover {
            background-color: #47763B;
        }
        .grid {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }
        .card {
            width: calc(33.333% - 20px);
            background-color: #fff;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            min-height: 150px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
        }
        .card h2 {
            margin: 0;
            font-size: 18px;
            color: #8EBA66;
            word-break: break-word;
        }
        .card p {
            margin: 5px 0;
            color: #666;
        }
        .card .description {
            margin-top: 10px;
            padding-top: 10px;
            border-top: 1px solid #ddd;
            font-size: 14px;
            color: #444;
            display: none;
        }
        .card:hover .description {
            display: block;
        }
        .plus-button, .delete-button {
            display: none;
            position: fixed;
            background-color: #8EBA66;
            color: white;
            border: none;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            font-size: 30px;
            cursor: pointer;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }
        .plus-button {
            bottom: 20px;
            right: 20px;
        }
        .delete-button {
            background-color: #E74C3C;
            bottom: 80px;
            right: 20px;
        }
        <% if (status === 'admin' || status === 'fellow') { %>
            .plus-button, .delete-button {
                display: block;
            }
            .card input[type="checkbox"] {
                position: absolute;
                top: 10px;
                right: 10px;
                z-index: 2;
            }
        <% } %>

        /* Responsive Styles */
        @media (max-width: 768px) {
            .navbar {
                flex-direction: column;
                align-items: flex-start;
            }
            .container {
                width: 90%;
                margin-left: 0;
            }
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
                padding: 10px;
            }
            .grid {
                gap: 10px;
            }
            .card {
                width: calc(50% - 10px);
            }
        }

        @media (max-width: 480px) {
            .navbar img {
                width: 30px;
                height: 30px;
            }
            .navbar a, .sign-in {
                font-size: 14px;
            }
            h1 {
                font-size: 24px;
            }
            p {
                font-size: 16px;
            }
            .card {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="navbar">
        <a href="/"><img src="/images/westridge.png" alt="Westridge Logo"></a>
        <a href="/advice/grammar">Advice</a>
        <a href="/opportunities">Resources</a>
        <a href="/calendar">Calendar</a>
        <a href="/fellows">Fellows</a>

        <!-- Profile Button with Dropdown -->
        <div class="profile-dropdown">
            <a href="/profile" id="profile-link" class="profile-icon">
                <i class="fas fa-user"></i>
            </a>
            <% if (user) { %>
                <a href="/logout" id="auth-link" class="auth-action">Log out</a>
            <% } else { %>
                <a href="/login" id="auth-link" class="auth-action">Login</a>
            <% } %>
        </div>
    </div>
    <div class="sidebar">
        <a href="#" class="resource-link" data-type="opportunities">Opportunities</a>
        <a href="#" class="resource-link" data-type="writing-help">Writing Help</a>
        <a href="#" class="resource-link" data-type="important-documents">Important Documents</a>
        <a href="#" class="resource-link" data-type="additional-resources">Additional Resources</a>
    </div>
    <div class="container">
        <h1 id="resourceTitle">Opportunities</h1>
        <div class="controls">
            <input type="text" id="searchBox" class="search-box" placeholder="Search by title...">
            <div class="sort-options">
                <button class="sort-button" id="sortName">Sort by Name</button>
                <button class="sort-button" id="sortDate">Sort by Due Date</button>
            </div>
        </div>
        <form id="deleteForm" action="/opportunities/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete the selected resources?');">
            <div class="grid" id="resourceGrid">
                <% opportunities.forEach(opportunity => { %>
                    <div class="card">
                        <% if (status === 'admin' || status === 'fellow') { %>
                            <input type="checkbox" name="opportunities" value="<%= opportunity._id %>">
                        <% } %>
                        <a href="<%= opportunity.link %>" target="_blank">
                            <h2><%= opportunity.title %></h2>
                            <% if (opportunity.deadline) { %>
                                <p>Due Date: <%= new Date(opportunity.deadline).toDateString() %></p>
                            <% } %>
                            <div class="description">
                                <p><%= opportunity.description %></p>
                            </div>
                        </a>
                    </div>
                <% }) %>
            </div>
            <% if (status === 'admin') { %>
                <button type="submit" class="delete-button">-</button>
            <% } %>
        </form>
        <% if (status === 'admin' || status === 'fellow') { %>
            <a href="opportunities/new"><button type="button" class="plus-button">+</button></a>
        <% } %>
    </div> 
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const opportunities = <%- JSON.stringify(opportunities) %>;
            const resourceLinks = document.querySelectorAll('.resource-link');
            const resourceTitle = document.getElementById('resourceTitle');
            const resourceGrid = document.getElementById('resourceGrid');
            const searchBox = document.getElementById('searchBox');
            const sortNameButton = document.getElementById('sortName');
            const sortDateButton = document.getElementById('sortDate');

            function renderResources(resources) {
                resourceGrid.innerHTML = '';
                resources.forEach(resource => {
                    const card = document.createElement('div');
                    card.classList.add('card');
                    card.innerHTML = `
                        <% if (status === 'admin' || status === 'fellow') { %>
                        <input type="checkbox" name="opportunities" value="${resource._id}">
                        <% } %>
                        <a href="${resource.link}" target="_blank">
                            <h2>${resource.title}</h2>
                            ${resource.deadline ? `<p>Due Date: ${new Date(resource.deadline).toDateString()}</p>` : ''}
                            <div class="description">
                                <p>${resource.description}</p>
                            </div>
                        </a>
                    `;
                    resourceGrid.appendChild(card);
                });
            }

            function filterAndRenderResources() {
                const searchTerm = searchBox.value.toLowerCase();
                const filteredResources = opportunities.filter(resource => resource.title.toLowerCase().includes(searchTerm));
                renderResources(filteredResources);
            }

            function sortResourcesByName() {
                opportunities.sort((a, b) => a.title.localeCompare(b.title));
                filterAndRenderResources();
            }

            function sortResourcesByDate() {
                opportunities.sort((a, b) => new Date(a.deadline) - new Date(b.deadline));
                filterAndRenderResources();
            }

            searchBox.addEventListener('input', filterAndRenderResources);
            sortNameButton.addEventListener('click', sortResourcesByName);
            sortDateButton.addEventListener('click', sortResourcesByDate);

            resourceLinks.forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    const type = link.dataset.type;
                    resourceTitle.textContent = type.charAt(0).toUpperCase() + type.slice(1).replace('-', ' ');
                    const filteredResources = opportunities.filter(resource => resource.type === type);
                    renderResources(filteredResources);

                    resourceLinks.forEach(link => link.classList.remove('active'));
                    link.classList.add('active');
                });
            });

            // Initial render
            renderResources(opportunities);
        });
    </script>
</body>
</html>
